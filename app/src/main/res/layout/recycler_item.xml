<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    android:elevation="20dp"
    android:id="@+id/contentCardView"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/clickRelativeLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/contentImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/whitegrey"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/contentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J W Marriott"
            android:layout_marginStart="15dp"
            android:textStyle="bold|normal"
            android:textColor="@color/white"
            android:layout_marginTop="140dp"
            android:textSize="18sp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.3"
            android:layout_marginStart="15dp"
            android:layout_marginTop="190dp"
            android:textColor="@color/red"
            android:textStyle="normal|bold"
            android:textSize="14sp"/>

        <RatingBar
            android:id="@+id/ratingStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="5"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_marginTop="191dp"
            android:layout_marginStart="40dp"
            android:theme="@style/RatingBarStyle"/>

        <TextView
            android:id="@+id/contentAddr"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@id/ratingText"
            android:layout_marginTop="8dp"
            android:layout_marginStart="18dp"
            android:text="@string/sample"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/contentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_below="@id/ratingText"
            android:layout_toEndOf="@id/contentAddr"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:textStyle="normal"/>



    </RelativeLayout>




</android.support.v7.widget.CardView>